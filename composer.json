{
    "name": "rodrigoandres/katastringcalculator",
    "description": "Php testing StringCalculator",
    "type": "project",
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3.10"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "RodrigoAndres\\KataStringCalculator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RodrigoAndres\\KataStringCalculator\\Test\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "test": [
            "phpunit --configuration phpunit.xml"
        ]
    }
}
